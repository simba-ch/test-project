.hot-word-wrapper{
  padding:30rpx 20rpx;
  background-color: #fff;
  border-radius: 10px;
  margin:20px 0;
}
.header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.title{
  display: flex;
  font-weight: bold;
  align-items: center;
}
.title-icon{
  margin-right: 10rpx;
}
.more{
  display: flex;
  color: var(--search-text);
  align-items: center;
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content:start;
}
.item{
  margin: 10rpx 20rpx 10rpx 0;
}