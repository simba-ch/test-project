.scroll-view_H {
  white-space: nowrap;
  border-bottom: 1px solid rgba(91, 91, 91, .6);
  background-color: #fff;
  color: #616161;
  box-shadow: 0 2px 5px 1px rgba(91, 91, 91, .6);
}

.scroll-view-item_H {
  display: inline-block;
  padding: 10px 30px;
  text-align: center;
}

.scroll-view-item_H.active {
  color: #000;
  border-bottom: 3px solid #000;
}