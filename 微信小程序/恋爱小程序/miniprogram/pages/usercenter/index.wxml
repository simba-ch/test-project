<navigation-bar>
  <navigation-icon></navigation-icon>
</navigation-bar>
<view class="content">
  <view class="user-header">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="nick-name">
      <open-data type="userNickName"></open-data>
    </view>
    <view class="info">
      <view>
        会员身份
        <text class="explain">普通会员</text>
      </view>
      <view>
        到期时间
        <text class="explain">2022-04-02 14:55</text>
      </view>
    </view>
    <view class="phone">绑定手机</view>
  </view>
  <view class="service">
    <view class="item {{index === 3 ? '' : 'border'}}" wx:for="{{items}}">
      <view class="left">
        <service-icon type="{{item.type}}"></service-icon>
        <view>{{item.text}}</view>
      </view>
      <t-icon name="chevron-right" size="xl" class="more" />
    </view>
  </view>

</view>
<view class="ad">
  <background-image container-class="container" background-image-class="bg-img" index="{{5}}"></background-image>
</view>